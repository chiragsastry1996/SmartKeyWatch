<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headlamp_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layout_centerInParent="true"
    android:gravity="center"
    tools:context=".Headlamp.HeadlampActivity">

    <TextView
        android:id="@+id/headlamp_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/headlamp_image"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/headlamp_image"
        android:src="@drawable/headlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/headlamp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/headlamp_image"
        android:background="@color/colorAccent"
        android:layout_marginTop="8dp"/>

</RelativeLayout>